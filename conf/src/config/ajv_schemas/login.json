{
	"type": "object",
	"properties": {
		"username": {
			"type": "string",
			"minLength": 3,
			"maxLength": 25,
			"pattern": "^[a-zA-Z0-9]+(?:[ _-][a-zA-Z0-9]+)*$"
		},
		"password": {
			"type": "string",
			"minLength": 8,
			"maxLength": 100,
			"pattern": "^(?=.*[a-z])(?=.*[A-Z])(?=.*[0-9])(?=.*[!@#\\$%\\^&\\*])"
		}
	},
	"required": ["username", "password"],
	"additionalProperties": false
}
